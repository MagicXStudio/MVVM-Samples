<Page
    x:Class="MvvmSampleUwp.Views.RayTracer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MvvmSampleUwp.Controls"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    NavigationCacheMode="Enabled"
    mc:Ignorable="d">
    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{x:Bind ViewModel.InitAsyncCommand}" CommandParameter="Ioc" />
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>
    <ScrollViewer Padding="{StaticResource DocumentationPageContentPadding}" CanContentRenderOutsideBounds="True">
        <StackPanel Spacing="16">
            <Button  Content="Star" Command="{x:Bind ViewModel.StarAsyncCommand}" />
            <Button Command="{x:Bind ViewModel.StopAsyncCommand}" />
            <Canvas Name="canvas" Height="512" Width="768">
                <Viewbox>
                    <Image Source="{x:Bind ViewModel.Source}"></Image>
                </Viewbox>
            </Canvas>
        </StackPanel>
    </ScrollViewer>
</Page>
